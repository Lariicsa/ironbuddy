<div class="columns is-desktop is-centered">
	<div class="column is-half">
		<h1 class="title is-2">You're gonna edit your profile</h1>
		<hr>
		<div class="box">
			<form action="/profile/edit?userid={{_id}}" method="POST" enctype="multipart/form-data">
				<div class="picture x16" style="background-image: url('{{this.img}}')"></div>

				<div class="file has-name is-right">
					<label class="file-label">
						<input class="file-input" type="file" name="photo" value="{{this.img}}">
						<span class="file-cta">
							<span class="file-icon">
								<i class="fas fa-upload"></i>
							</span>
							<span class="file-label">
								Change your photo
							</span>
						</span>
						<span class="file-name">
							{{this.img}}
						</span>
					</label>
				</div>
				<hr>
				<div class="field">
					<label class="label">Name</label>
					<div class="control">
						<input class="input" type="text" name="name" value="{{this.name}}">
					</div>
				</div>

				<div class="field">
					<label class="label">Last name</label>
					<div class="control">
						<input class="input" type="text" name="lastname" value="{{this.lastname}}">
					</div>
				</div>
			
				<input class="button is-fullwidth is-info" type="submit" value="Update Profile">
			</form>
		</div>
	</div>
</div>